{
	"name": "erdb",
	"displayName": "ERDB",
	"description": "Embedded rust debugger",
	"version": "0.1.0",
	"publisher": "Blinningjr",
	"author": {
		"name": "Niklas Lundberg"
	},
	"license": "(MIT OR Apache-2.0)",
	"repository": {
		"type": "git",
		"url": "https://github.com/Blinningjr/embedded-rust-debugger-vscode.git"
	},
	"icon": "images/erdb.png",
	"keywords": [
		"debugger",
		"debug",
		"rust",
		"embedded"
	],
	"engines": {
		"vscode": "^1.71.2"
	},
	"categories": [
		"Debuggers"
	],
	"activationEvents": [
		"onDebugAdapterProtocolTracker:ERDB"
	],
	"main": "./out/extension.js",
	"contributes": {
		"breakpoints": [
			{
				"language": "rust"
			}
		],
		"debuggers": [
			{
				"type": "ERDB",
				"label": "ERDB",
				"linux": {
					"program": "./erdb/run-erdb.sh"
				},
				"args": [
					"-m",
					"server",
					"-v",
					"info"
				],
				"languages": [
					"rust"
				],
				"configurationAttributes": {
					"launch": {
						"required": [
							"program",
							"chip",
							"cwd",
							"port"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Path of program binary to debug",
								"default": "${workspaceRoot}/target/debug/<binary-name>"
							},
							"chip": {
								"type": "string",
								"description": "Chip to debug, example 'STM32F411RETx'",
								"default": "STM32F411RETx"
							},
							"cwd": {
								"type": "string",
								"description": "Project work directory",
								"default": "${workspaceRoot}"
							},
							"port": {
								"type": "integer",
								"description": "Port to use",
								"default": 8800
							},
							"halt_after_reset": {
								"type": "boolean",
								"description": "Halt target after resting it",
								"default": false
							}
						}
					},
					"attach": {
						"required": [
							"program",
							"chip"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Path of program binary to debug"
							},
							"chip": {
								"type": "string",
								"description": "Chip to debug, example 'STM32F411RETx'"
							},
							"cwd": {
								"type": "string",
								"description": "Project work directory",
								"default": "${workspaceRoot}"
							},
							"port": {
								"type": "integer",
								"description": "Port to use",
								"default": 8800
							},
							"reset": {
								"type": "boolean",
								"description": "Reset target after attaching to the probe",
								"default": false
							},
							"halt_after_reset": {
								"type": "boolean",
								"description": "Halt target after resting it",
								"default": false
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "ERDB",
						"request": "launch",
						"name": "ERDB: Launch",
						"program": "${workspaceRoot}/target/debug/<binary-name>",
						"chip": "<chip-name>",
						"port": 8800
					},
					{
						"type": "ERDB",
						"request": "attach",
						"name": "ERDB: Attach",
						"program": "${workspaceRoot}/target/debug/<binary-name>",
						"chip": "<chip-name>",
						"port": 8800,
						"reset": false
					}
				],
				"configurationSnippets": [
					{
						"label": "ERDB: Launch configuration",
						"description": "A new configuration for launching a program.",
						"body": {
							"type": "ERDB",
							"request": "launch",
							"name": "ERDB: Launch",
							"program": "${workspaceRoot}/target/debug/<binary-name>",
							"chip": "<chip-name>",
							"port": 8800
						}
					},
					{
						"label": "ERDB: Attach configuration",
						"description": "A new configuration for attaching to a running program.",
						"body": {
							"type": "ERDB",
							"request": "attach",
							"name": "ERDB: Attach",
							"program": "${workspaceRoot}/target/debug/<binary-name>",
							"chip": "<chip-name>",
							"port": 8800,
							"reset": false
						}
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint extension_src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.20.47",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
